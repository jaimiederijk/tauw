<table>
  <tr>
    <th>Name</th>
    <th>Waar</th>
    <th>Gebruikt voor</th>
  </tr>

  <% @sensors.each do |sensor| %>
    <tr>
      <td><%= sensor.name %></td>
      <td><%= sensor.where %></td>
      <td><%= sensor.used_for %></td>
      <td><%= link_to 'Show', sensor_path(sensor) %></td>
    </tr>
  <% end %>
</table>
